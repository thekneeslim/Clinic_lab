<!DOCTYPE html>
<html>
  <head>
    <title>ClinicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <a href="/">Home</a>

    <% if @current_patient%>
      <%= link_to 'LOGOUT', logout_url, method: :delete, data: {confirm: 'Are you sure?'}%>
      <% else %>
      <a class="nav-link" href="/login">Login</a>
      <a class="nav-link" href="/patients/new">Sign Up</a>
    <%end%>

    <%if @current_patient %>
      <% if @current_patient.admin == true %>
      <a class="nav-link" href="/doctors">Doctors</a>
      <% end %>
    <% end %>

    <%= render "partials/flash" %>
    <% if @current_patient %>
      <p>
        WELCOME <%= @current_patient.name %>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
