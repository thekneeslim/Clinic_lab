<!DOCTYPE html>
<html>
  <head>
    <title>ClinicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <a href="/">Home</a>

    <% if @current_patient%>
      <% if @current_patient.admin%>
      <a class="nav-link" href="/specialties">Speacilties</a>
      <a class="nav-link" href="/doctors">Doctors</a>
      <%end%>
      <%= link_to 'Logout', logout_url, method: :delete, data: {confirm: 'Are you sure?'}%>
    <% else %>
      <a class="nav-link" href="/login">Login</a>
      <a class="nav-link" href="/patients">Sign Up</a>
    <%end%>

    <%= render "partials/flash" %>

    <%= yield %>
  </body>
</html>
