<!DOCTYPE html>
<html>
  <head>
    <title>ClinicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script src="https://code.jquery.com/jquery-3.1.0.min.js" integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="   crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>



  <body>
    <a href="/">Home</a>

    <% if @current_patient%>
      <% if @current_patient.admin%>
      <a class="nav-link" href="/specialties">Speacilties</a>
      <a class="nav-link" href="/doctors">Doctors</a>
      <a class="nav-link" href="/patients">Patients</a>
      <a class="nav-link" href="/appointment_dates">Date</a>
      <a class="nav-link" href="/time_tables">Time</a>
      <%end%>
      <%= link_to 'Appointment', appointments_url, method: :get%>
      <%= link_to 'Logout', logout_url, method: :delete, data: {confirm: 'Are you sure?'}%>
    <% else %>
      <a class="nav-link" href="/login">Login</a>
      <a class="nav-link" href="/patients/new">Sign Up</a>
    <%end%>


    <!-- TANG WEI INCLUDE HERE :D -->
    <%= render "partials/flash" %>
    <% if @current_patient %>
      <p>
        WELCOME <%= @current_patient.name %>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
